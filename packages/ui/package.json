{
    "name": "@lcllcllcl/ui",
    "version": "0.0.6",
    "description": "UI 组件库",
    "main": "cjs-dist/index.js",
    "module": "esm-dist/index.mjs",
    "types": "esm-dist/index.mts",
    "files": [
        "esm-dist",
        "iife-dist",
        "cjs-dist",
        "CHANGELOG.md"
    ],
    "keywords": [
        "react",
        "react-component",
        "ui",
        "component-library",
        "styled-components",
        "typescript"
    ],
    "scripts": {
        "dev": "tsup --watch",
        "build": "tsup",
        "release:ui": "pnpm build && npm publish",
        "test": "vitest",
        "test:button": "vitest src/components/Button/Button.test.tsx",
        "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s",
        "changelog:init": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0",
        "version": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s && git add CHANGELOG.md",
        "release": " pnpm run test && np --no-publish && pnpm publish",
        "release:preview": "np --preview",
        "release:noTests": "np --no-tests"
    },
    "publishConfig": {
        "registry": "https://packages.aliyun.com/6981695a6ec1ba182dc6e89a/npm/npm-registry/"
    },
    "np": {
        "packageManager": "pnpm",
        "cleanup": false,
        "tests": true,
        "yarn": false,
        "hooks": {
            "version": "pnpm version && git add CHANGELOG.md"
        }
    },
    "author": "Heyi",
    "license": "ISC",
    "devDependencies": {
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^14.2.1",
        "@testing-library/user-event": "^14.5.2",
        "@types/react": "18.3.3",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/coverage-v8": "^4.0.17",
        "conventional-changelog-cli": "^5.0.0",
        "jsdom": "^25.0.1",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "styled-components": "6.1.11",
        "tsup": "8.4.0",
        "vitest": "^4.0.17"
    },
    "peerDependencies": {
        "react": "18.3.1",
        "styled-components": "6.1.11"
    },
    "dependencies": {
        "np": "^11.0.0"
    }
}
