{
    "$schema": "https://turbo.build/turbo.json",
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": false
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["myWebsiteDist/**"]
        },
        "release:ui": {
            "cache": false,
            "persistent": false
        },
        "release:docs": {
            "cache": false,
            "persistent": true
        }
    }
}
