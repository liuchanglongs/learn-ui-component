{
    "name": "miaoma-ui",
    "version": "0.0.13",
    "description": "妙码官方 UI 组件库",
    "packageManager": "pnpm@9.0.4",
    "main": "index.js",
    "scripts": {
        "dev": "turbo dev",
        "lint:es": "eslint packages/**/*.js",
        "lint:style": "stylelint \"(packages|apps)/**/*.css\"",
        "lint": "pnpm lint:es && pnpm lint:style",
        "spellcheck": "cspell lint --dot --gitignore --color --cache --show-suggestions \"(packages|apps)/**/*.@(html|js|cjs|mjs|ts|tsx|css|scss|md)\"",
        "prepare": "husky",
        "commit": "git-cz",
        "release:docs": "turbo release:docs",
        "myWebsite:build": "pnpm --filter my-website build",
        "ui:build": "pnpm --filter @lcllcllcl/ui build",
        "my:build:pnpm": "pnpm ui:build &&  pnpm myWebsite:build",
        "my:build": "turbo run build  --filter=my-website",
        "my:build:graph": "turbo run build  --filter=my-website --graph",
        "ui:version": "changeset & changeset version && pnpm install",
        "ui:publish": "pnpm --filter @lcllcllcl/ui publish  --no-git-checks",
        "ui:tag": "node scripts/ui-tag.cjs",
        "ui:release": "pnpm --filter @lcllcllcl/ui test && pnpm ui:version && pnpm ui:publish && pnpm ui:tag  && pnpm commit "
    },
    "author": "Heyi",
    "license": "ISC",
    "config": {
        "commitizen": {
            "path": "node_modules/cz-git"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix"
        ],
        "*.css": [
            "stylelint --fix"
        ]
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.8",
        "@commitlint/config-conventional": "19.2.2",
        "@eslint/js": "9.6.0",
        "commitizen": "4.3.0",
        "commitlint": "19.3.0",
        "conventional-changelog-cli": "^5.0.0",
        "cspell": "8.9.1",
        "cz-git": "1.9.3",
        "eslint": "9.6.0",
        "husky": "9.0.11",
        "lint-staged": "15.2.7",
        "stylelint": "16.6.1",
        "turbo": "2.0.5",
        "typescript": "5.5.2",
        "typescript-eslint": "7.14.1"
    }
}
